<a href="/">Back To HomePage</a>
<article>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" autocomplete="off"/>
      <span>Original Title - ({{post.title}})</span>
    </div>
    <div>
      <input name="post-url" type="text" value="{{post.post_url}}" autocomplete="off"/>
      <span>Original Link - ({{post.post_url}})</span>
    </div>
    <div>
      {{post.vote_count}} {{format_plural "upvote" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save Post</button>
    <button type="submit" class="delete-post-btn">Delete Post</button>
  </form>
</article>
{{#if loggedIn}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
{{/if}}